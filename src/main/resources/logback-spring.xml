<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--控制台输出log-->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--输出的格式-->
            <pattern>[%d{yyyy/MM/dd-HH:mm:ss}] [%thread] [%-5level] [%logger] : %msg%n</pattern>
            <!--编码-->
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <!--文件存储-->
    <appender name="fileStore" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <File>logs/tgpm_system.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--分日期存储，做多保存30天，每个文件最大10M-->
            <fileNamePattern>logs/tgpm_system.%d.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <!--输出的内容格式-->
        <encoder>
            <pattern>[%d{yyyy/MM/dd-HH:mm:ss}] [%thread] [%-5level] [%logger] : %msg%n</pattern>
            <!--编码-->
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--一般dao操作被项目封装可以设置项目上的封装路径-->
    <logger name="com.example.tgpmsystem.mapper" level="DEBUG"/>

    <logger name="com.example.tgpmsystem" level="DEBUG" additivty="false">
        <!--log在Console输出-->
        <!--<appender-ref ref="Console"/>-->
        <!--log存进文件-->
        <appender-ref ref="fileStore"/>
    </logger>

    <!--控制台输出日志级别 DEBUG信息太多，所以就用info了-->
    <root level="INFO">
        <appender-ref ref="Console"/>
    </root>
</configuration>